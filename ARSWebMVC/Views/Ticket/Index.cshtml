
@{
    ViewBag.Title = "Index";
}

<section class="mt-4 pt-5">
    @using (Html.BeginForm("Index", "Ticket", null, FormMethod.Post, new { @class = "" }))
    {
    <div class="card p-3 col col-sm-8 col-md-6 col-lg-4 m-auto">
        <div class="mb-4">
            <span style="padding-bottom:5px;border-bottom:2px solid #00968b;"><i class="fa fa-info-circle mr-1"></i>View ticket status&nbsp;</span>
        </div>

        <div class="input-group mb-2" style="border:1px solid #ccc;">
            <div class="input-group-prepend"><span class="input-group-text" style="border-radius:0;border:0;background-color:white;min-width:60px;">Ticket code</span></div>
            <input type="text" name="txtConfirmationCode" class="form-control border-0" , style="border-left: 1px solid #ccc !important;">
        </div>
        <span class="text-danger font-italic">@ViewBag.ErrorMessage</span>

        <button class="btn btn-primary btn-block mt-4" type="submit" style="background:linear-gradient(135deg, rgb(0,150,139), #176e74);border:0;border-radius:0;margin-left:auto;">Submit</button>
    </div>
    }
</section>