@model ARSWebMVC.Models.Ticket

@{
    ViewBag.Title = "Input Passennger Information";
}

@if (ViewBag.InputPassengerError != null)
{
    <div class="modal fade" id="modalError" tabindex="-1" role="dialog" aria-labelledby="modalError" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p class="text-danger">@ViewBag.InputPassengerError</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- JQuery -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.13.0/umd/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.4/js/mdb.min.js"></script>

    <script type="text/javascript">
        let btnShowError = $('<span data-toggle="modal" data-target="#modalError"></span>')[0];
        document.body.append(btnShowError);
        btnShowError.click();
    </script>

}


<section class="mt-5 mb-5 container pt-5 ">
    @using (Html.BeginForm("ChooseFlightSchedule", "Flight", FormMethod.Post))
    {
        <div class="card p-3 col col-md-6 m-auto">
            <div class="mb-4"><span style="padding-bottom:5px;border-bottom:2px solid #00968b;"><i class="fa fa-info-circle mr-1"></i>Passenger Info</span></div>



            <div class="input-group mb-2" style="border:1px solid #ccc;">
                <div class="input-group-prepend"><span class="input-group-text" style="border-radius:0;border:0;background-color:white;min-width:60px;">Departure date</span></div>
                @{string currentDate = DateTime.Now.ToString("yyyy-MM-dd"); }
                @Html.Editor("departureDate", new { htmlAttributes = new { @class = "form-control", type = "date", Value = currentDate, min = currentDate } })
            </div>




            <div class="form-row mt-4">


                <div class="col">
                    <div class="input-group mb-2" style="border:1px solid #ccc;">
                        <div class="input-group-prepend"><span class="input-group-text" style="border-radius:0;border:0;background-color:white;min-width:60px;">Child</span></div>
                        @Html.EditorFor(m => m.ChildrenCount, new { htmlAttributes = new { id = "children-count", @class = "form-control", min = 0 } })
                    </div>
                </div>


                <div class="col">
                    <div class="input-group mb-2" style="border:1px solid #ccc;">
                        <div class="input-group-prepend"><span class="input-group-text" style="border-radius:0;border:0;background-color:white;min-width:60px;">Adult</span></div>
                        @Html.EditorFor(m => m.AdultCount, new { htmlAttributes = new { id = "adult-count", @class = "form-control", min = 0 } })
                    </div>
                </div>
                <div class="col">
                    <div class="input-group mb-2" style="border:1px solid #ccc;">
                        <div class="input-group-prepend"><span class="input-group-text" style="border-radius:0;border:0;background-color:white;min-width:60px;">Senior</span></div>
                        @Html.EditorFor(m => m.SeniorCount, new { htmlAttributes = new { id = "senior-count", @class = "form-control", min = 0 } })
                    </div>
                </div>
            </div><button class="btn btn-primary btn-block mt-4" type="submit" style="background:linear-gradient(135deg, rgb(0,150,139), #176e74);border:0;border-radius:0;margin-left:auto;">Submit</button>
        </div>
    }
</section>