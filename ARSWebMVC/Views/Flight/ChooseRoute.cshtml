@model Dictionary<int, List<ARSWebMVC.Models.Route>>
@using ARSWebMVC.Models
@{
    ViewBag.Title = "Choose Route";
}

@if (ViewBag.ChooseRouteError != null)
{
    <div class="modal fade" id="modalError" tabindex="-1" role="dialog" aria-labelledby="modalError" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered " role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p class="text-danger">@ViewBag.ChooseRouteError</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- JQuery -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.13.0/umd/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.4/js/mdb.min.js"></script>

    <script type="text/javascript">
        let btnShowError = $('<span data-toggle="modal" data-target="#modalError"></span>')[0];
        document.body.append(btnShowError);
        btnShowError.click();
    </script>

}

<section>
    <div class="container card p-5 animated wow fadeIn mt-5">
        <h2 class="text-center mb-4">Choose Route</h2>

        @for (int i = 0; i < Model.Count; i++)
        {
            using (Html.BeginForm("InputPassengerInfo", "Flight", null, FormMethod.Post))
            {
                <input type="hidden" name="dictRouteID" value="@i" />
                List<ARSWebMVC.Models.Route> lstRoute = Model[i];
                <div>
                    <div></div>
                    <!-- Card -->
                    <div class="card mb-3">
                        <!-- Card content -->
                        <div class="card-body">
                            <div class="row ">
                                <div class="col d-flex align-items-center "><h4 class="card-title mb-0">@lstRoute.First().CityA.Name to @lstRoute.Last().CityB.Name</h4></div>
                                <div class="col d-flex align-items-center">
                                    <div>@lstRoute.Count Stops ; <span>Skymile: @lstRoute.Sum(r => r.SkyMiles)</span></div>
                                </div>
                                <div class="col ">
                                    <button class="btn-outline-default btn teal p-2" type="button" data-toggle="collapse" data-target="#collapseExample@(i)" aria-expanded="false" aria-controls="collapseExample">More Details</button>
                                    <input type="submit" class="  btn teal p-2" value="Choose" />
                                </div>
                            </div>

                            <!-- Button -->
                        </div>
                        <div class="collapse pl-3 pr-3" id="collapseExample@(i)">
                            <div class="">
                                <table class="table table-hover">
                                    <!--Table head-->
                                    <thead>
                                        <tr>
                                            <th>FROM</th>
                                            <th>TO</th>
                                            <th>SKYMILE</th>
                                        </tr>
                                    </thead>
                                    @foreach (ARSWebMVC.Models.Route route in lstRoute)
                                    {
                                        <tbody>
                                            <tr>
                                                <td>@route.CityA.Name</td>
                                                <td>@route.CityB.Name</td>
                                                <td>@route.SkyMiles</td>
                                            </tr>
                                        </tbody>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- Card -->
                    <!-- / Collapse buttons -->
                    <!-- Collapsible element -->

                </div>
            }
        }
    </div>
</section>