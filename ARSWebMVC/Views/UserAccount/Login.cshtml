@model ARSWebMVC.Models.Profile
@{
    ViewBag.Title = "Login";
}
<section class=" func-login">
    <div class="container ">
        @using (Html.BeginForm("Login", "UserAccount", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal form-login login-form col-md-6", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4 class="text-center">Login</h4>
            <div class="text-center"><span class=" text-danger">@ViewBag.ErrorMessage</span></div>
            <div class="row margin">
                <div class="input-field col s12">
                    <div class="col s1 pt-2 col-sm-2">
                        <i class="fas fa-user fa-2x"></i>
                    </div>
                    <div class="col s11 pl-4 col-sm-10">
                        @Html.TextBoxFor(m => m.UserID)
                        @Html.ValidationMessageFor(m => m.UserID, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row margin">
                <div class="input-field col s12">
                    <div class="col s1 pt-2">
                        <i class="fas fa-unlock fa-2x"></i>
                    </div>
                    <div class="col s11 pl-4">
                        @Html.PasswordFor(m => m.Password)
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <button type="submit" class="btn waves-effect waves-light col s12">Login</button>
                </div>
            </div>
        }
    </div>
</section>