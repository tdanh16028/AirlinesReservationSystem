@model ARSWebMVC.Models.Profile
@{
    ViewBag.Title = "Profile";
}

<div class="container mt-5">
    <div class="row ">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad frm-userProfile">
            <div class="panel panel-info card-panel" >
                <div class="panel-heading">
                    <h3 class="panel-title">User Profile</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class=" col-md-12 col-lg-12 ">
                            <table class="table table-user-information">
                                <tbody>
                                    <tr>
                                        <td>@Html.LabelFor(s => s.FirstName):</td>
                                        <td>@Html.DisplayFor(s => s.FirstName)</td>
                                    </tr>
                                    <tr>
                                        <td>@Html.LabelFor(s => s.LastName):</td>
                                        <td>@Html.DisplayFor(s => s.LastName)</td>
                                    </tr>
                                    <tr>
                                        <td>@Html.LabelFor(s => s.Address):</td>
                                        <td>@Html.DisplayFor(s => s.Address)</td>
                                    </tr>
                                    <tr>
                                        <td>@Html.LabelFor(s => s.PhoneNumber):</td>
                                        <td>@Html.DisplayFor(s => s.PhoneNumber)</td>
                                    </tr>
                                    <tr>
                                        <td>@Html.LabelFor(s => s.EmailAddress):</td>
                                        <td>@Html.DisplayFor(s => s.EmailAddress)</td>
                                    </tr>
                                    <tr>
                                        <td>@Html.LabelFor(s => s.Sex):</td>
                                        @if (Model.Sex)
                                        {
                                            <td>Male</td>
                                        }
                                        else
                                        {
                                            <td>Female</td>
                                        }
                                    </tr>
                                    <tr>
                                        <td>@Html.LabelFor(s => s.Age):</td>
                                        <td>@Html.DisplayFor(s => s.Age)</td>
                                    </tr>
                                    <tr>
                                        <td>@Html.LabelFor(s => s.CreditCard):</td>
                                        <td>@Html.DisplayFor(s => s.CreditCard)</td>
                                    </tr>
                                    <tr>
                                        <td>@Html.LabelFor(s => s.SkyMiles):</td>
                                        <td>@Html.DisplayFor(s => s.SkyMiles)</td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="row">
                                <div class=" d-flex justify-content-center  col-md-6 mt-2">
                                    @Html.ActionLink("Edit Your Profile", "EditProfile", "UserAccount", null, new { @class = "btn btn-primary " })
                                </div>
                                <div class="d-flex justify-content-center col-md-6 mt-2">
                                    @Html.ActionLink("Change Your Password", "ChangePassword", "UserAccount", null, new { @class = "btn btn-primary" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



