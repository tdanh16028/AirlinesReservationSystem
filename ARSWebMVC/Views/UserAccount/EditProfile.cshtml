@model ARSWebMVC.Models.Profile

@{
    ViewBag.Title = "Updateprofile";
}


<div class=" pt-5 animated wow fadeIn">

    @using (Html.BeginForm("EditProfile", "UserAccount", FormMethod.Post, new { @class = "well form-horizontal col-md-4 col-sm-12 card m-auto p-md-5" }))
    {


        <!-- Form Name -->
        <legend><center><h2><b>@ViewBag.Title</b></h2></center></legend><br>

        <!-- Text input-->

        <div class="form-group d-none">
            <div class="col-md ">
                <div class=" input-group">
                    @Html.EditorFor(model => model.UserID, new { htmlAttributes = new { @class = "form-control col-12" } })
                    @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger col-12" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md ">
                <div class=" input-group">
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control col-12", placeholder = "Fist Name" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger col-12" })
                </div>
            </div>
        </div>

        <!-- Text input-->

        <div class="form-group">

            <div class="col-md inputGroupContainer">
                <div class="input-group">

                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control col-12", placeholder = "Last Name" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger col-12" })
                </div>
            </div>
        </div>
        <div class="form-group">

            <div class="col-md inputGroupContainer">
                <div class="input-group">

                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control col-12", placeholder = "Address" } })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger col-12" })
                </div>
            </div>
        </div>

        <div class="form-group">

            <div class="col-md inputGroupContainer">
                <div class="input-group">

                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control col-12", placeholder = "Phone Number" } })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger col-12" })
                </div>
            </div>
        </div>

        <div class="form-group">

            <div class="col-md inputGroupContainer">
                <div class="input-group">

                    @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control col-12", placeholder = "EmailAddress" } })
                    @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger col-12" })
                </div>
            </div>
        </div>

        <div class="form-group">

            <div class="col-md inputGroupContainer d-flex flex-row">
                <label class="control-label mr-2">Gender :</label>
                <div class="pl-1">
                    <label class="radio-inline">
                        @Html.RadioButtonFor(model => model.Sex, true, new { @checked = true }) <span>Male</span>
                    </label>
                    <label class="radio-inline">
                        @Html.RadioButtonFor(model => model.Sex, false)<span class="ml-2">Female</span>
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md inputGroupContainer">
                <label class="control-label mr-2 d-inline-flex flex-row">Age:</label>
                @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control col-2 d-inline", type = "number", min = "6", max = "100" } })
                @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Text input-->

        <div class="form-group">
            <div class="col-md inputGroupContainer">
                <div class="input-group">

                    @Html.EditorFor(model => model.CreditCard, new { htmlAttributes = new { @class = "form-control col-12", placeholder = "Credit Card" } })
                    @Html.ValidationMessageFor(model => model.CreditCard, "", new { @class = "text-danger col-12" })
                </div>
            </div>
        </div>

        <hr />
        <div class="form-group">
            <label class="col-md">Confirm Your Password</label>
            <div class="col-md inputGroupContainer">
                <div class="input-group">
                    <input name="txtConfirmPassword" placeholder="Confirm Password" class="form-control" type="password">
                    <span class="text-danger col-12">@ViewBag.ErrorConfirmPassword</span>
                </div>
               
            </div>
        </div>

        <!-- Button -->
        <div class="form-group">
            <label class="col-md"></label>
            <div class="col-md d-flex flex-row-reverse">
                <button type="submit" class="btn btn-default teal">Submit</button>
            </div>
        </div>
    }

</div>

