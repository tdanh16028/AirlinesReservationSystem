@using ARSWebMVC.Models
@model List<City>

@{
    ViewBag.Title = "CheckingAvailability";
}

@if (TempData["ChooseFromToError"] != null)
{
    <div class="modal fade" id="modalError" tabindex="-1" role="dialog" aria-labelledby="modalError" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p class="text-danger">@TempData["ChooseFromToError"]</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- JQuery -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.13.0/umd/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.4/js/mdb.min.js"></script>

    <script type="text/javascript">
        let btnShowError = $('<span data-toggle="modal" data-target="#modalError"></span>')[0];
        document.body.append(btnShowError);
        btnShowError.click();
    </script>

}

<section class="">
    <div class="container mt-5">
        <div class="card  animated wow fadeIn">
            <div class="card-body">
                <h5 class="mb-5">Checking Availability</h5>
                <!-- Default form grid -->
                @using (Html.BeginForm("ChooseRoute", "Flight", null, FormMethod.Post, new { @class = " form-ticketstatus card-panel col-10 m-auto p-md-5 pt-5 pb-5" }))
                {
                    <!-- Grid row -->
                    <div class="row">
                        <!-- Grid column -->
                        <div class=" col-sm-12 col-md text-md-center">
                            <!-- Default input -->
                            <label for="from-city">Pick the starting point:</label>
                            <select id="from-city" name="fromCityID" class="selectpicker" searchable="Search here..">
                                @foreach (City city in Model)
                                {
                                    string text = @city.Code + " - " + @city.Name;
                                    <option value="@city.ID" data-tokens="@text">@text</option>
                                }
                            </select>
                        </div>
                        <i class="far fa-arrow-alt-circle-right  col align-self-end text-center col-sm-12 col-md-2 fa-2x mt-2 d-md-inline d-none "></i>
                        <i class="far fa-arrow-alt-circle-down  col align-self-end text-center col-sm-12 col-md-2 fa-2x mt-2 d-md-none d-sm-inline "></i>
                        <div class=" col-sm-12 col-md text-md-center">
                            <!-- Default input -->
                            <label for="to-city">Pick the ending point:</label>
                            <select id="to-city" name="toCityID" class="selectpicker" searchable="Search here..">
                                @foreach (City city in Model)
                                {
                                    string text = @city.Code + " - " + @city.Name;
                                    <option value="@city.ID" data-tokens="@text">@text</option>
                                }
                            </select>
                        </div>
                        <!-- Grid column -->
                    </div>
                    <!-- Default unchecked -->
                    <div class="pt-5 pl-0 pl-md-5">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input text-center" id="defaultUnchecked">
                            <label class="custom-control-label" for="defaultUnchecked">Default unchecked</label>
                        </div>
                    </div>


                    <div class="text-center mt-5">
                        <button type="submit" class="btn teal"><i class="fas fa-search prefix mr-3"></i>Search</button>
                        @*<a class="btn teal" href="/Home/ListRoute"><i class="fas fa-search prefix mr-3"></i>Search</a>*@
                    </div>
                }
            </div>
        </div>
    </div>
</section>
