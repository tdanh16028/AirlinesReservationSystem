
@{
    ViewBag.Title = "Home Page";
}

<section class="query-flight-details pt-5 pb-5">
    <div class="container">

        <div class="row  form-query-flight-details">
            <div class="col-md-4">
                <h2 class="text-white">Chào mừng đến với trang web của tui</h2>
            </div>
